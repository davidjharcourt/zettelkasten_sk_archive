{
  // We now support comments!
  // styles can be:
  // - italic
  // - bold
  // - bolditalic
  "background" : "#fffdf6e3",
  "foreground" : "#ff657b83",
  "linehighlight": "#1F3D3812",
  "line_padding_bottom": 4,
  "line_padding_top": 4,
  "selection" : {
    "background": "#ffd33682",
    "foreground": "#fffdf6e3"
  },
  "font": {"face": "Ubuntu Mono", "size": 16, "style": "normal"},
  "caret": "#ff6ec3dc",

  "text.italic":     {"symbol": {"color": "#AAAAAA", "style": "italic"},
                      "text" :  {"style": "italic"}},
  "text.bold":       {"symbol": {"color": "#AAAAAA", "style": "italic"},
                      "text" :  {"style": "bold"}},
  "text.bolditalic": {"symbol": {"color": "#AAAAAA", "style": "italic"},
                      "text" :  {"style": "bolditalic"}},

  "h.symbol" : {"color": "#b58900", "style": "bold"},
  "h1.text" :  {"color": "#b58900", "style": "bold"},
  "h2.text" :  {"color": "#b58900", "style": "bold"},
  "h3.text" :  {"color": "#b58900", "style": "bold"},
  "h4.text" :  {"color": "#b58900", "style": "bold"},
  "h5.text" :  {"color": "#b58900", "style": "bold"},
  "h6.text" :  {"color": "#b58900", "style": "bold"},

  "quote": {"symbol": {"color": "#657b83"},
            "text" :  {"color": "#657b83", "style": "italic"}},

  "code.fenced":    {"color": "#ffffff", "background": "#4a4a4a"},
  "code":           {"color": "#b58900"},

  "list.symbol"   : {"color": "#93a1a1"},
  "list.unordered": {},
  "list.ordered":   {},

  "tag":     {"color": "#268bd2", "style": "italic"},
  "citekey": {"color": "#6c71c4"},

  "link": {
    "title": {"color": "#2aa198", "style": "bold"},
    "url"  : {"color": "#2aa198", "style": "italic"},
    "attr": {"color": "#AAAAAA", "style": "italic"}
  },

  "zettel.link" : {"color": "#268bd2"},
  "comment" : {"color": "#93a1a1"},
  "footnote": {"color": "#cb4b16"},

  // search specs --- not used in default markdown
  // only used for saved searches area
  "search.name": {"style": "bolditalic"},
  "search.spec": {"color": "#e42e70",// "background": "#99ccff"
  },
}
